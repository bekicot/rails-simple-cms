= form_for(:user, :as => resource_name, :url => session_path(resource_name)) do |f|

  .login-form
    .email
      = f.label :email
      %br
      = f.email_field :email, :autofocus => true
    .password
      = f.label :password
      %br
      = f.password_field :password

    - if devise_mapping.rememberable?
      .remember-me
        = f.check_box :remember_me
        = f.label :remember_me
    .sign-in
      = f.submit "Sign In"