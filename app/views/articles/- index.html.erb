<h1> Ini Index Artikel </h1>

<table>

	<tr>
			<th>Title</th>
			<th>Text</th>
			<th>Author</th>
			<th>Category</th>
			<th>Tags</th>
	</tr>

	<% @article.each do |post| %>

		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= post.user.first_name %></td>
			<td><%= post.category.name %></td>
			<td><%= post.tags.join(', ') %></td>
			<td><%= link_to 'Show', article_path(post) %></td>
			<td><%= link_to 'Edit', edit_article_path(post) %></td>
			<td><%= link_to 'Destroy', article_path(post), method: :delete, data: { confirm: 'Are You sure ?'} %> </td>

		</tr>
	<% end -%>

</table>
	