- model_class = Boot
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @boot.title
%p
  %strong= model_class.human_attribute_name(:dec) + ':'
  %br
  = @boot.dec

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), boot_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_boot_path(@boot), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), boot_path(@boot), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
