- model_class = Boot
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:dec)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @boots.each do |boot|
      %tr
        %td= link_to boot.id, boot_path(boot)
        %td= boot.title
        %td= boot.dec
        %td=l boot.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_boot_path(boot), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), boot_path(boot), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_boot_path, :class => 'btn btn-primary'
